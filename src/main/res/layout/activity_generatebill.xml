<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerateBill">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#0A0A0A"
        android:text="Request"
        android:textSize="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id = "@+id/sid"
        android:hint = "Sid"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#9C8D9B"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginTop="115dp"/>


    <EditText
        android:id="@+id/cust_email"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:ems="10"
        android:hint = "Email"
        android:inputType="textEmailAddress"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#9C8D9B"
        android:layout_marginTop="170dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id = "@+id/request_cust_name"
        android:hint = "Name"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#9C8D9B"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginTop="225dp"/>

    <EditText
        android:id="@+id/request_cust_contact"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="time"
        android:hint="Contact"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#9C8D9B"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginTop="280dp"/>

    <EditText
        android:id="@+id/request_cust_address"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:focusable="true"
        android:hint="Address"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#9C8D9B" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:focusable="true"
        android:hint="Quantity"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#9C8D9B" />


    <Button
        android:id="@+id/req"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:layout_marginTop="520dp"
        android:background="#F2070707"
        android:textColor="#F7F5F0F0"
        android:text="Generate  Bill"
        android:textSize="24sp" />
</RelativeLayout>